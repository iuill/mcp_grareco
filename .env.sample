# サーバー設定
GRARECO_PORT=3000
# Dockerコンテナ等で使用する場合は0.0.0.0を指定する
HOST=localhost

# Anthropic API設定
ANTHROPIC_API_KEY=your_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_OUTPUT_TOKENS=8192  # 旧ANTHROPIC_MAX_TOKENS
ANTHROPIC_MAX_CONTEXT_WINDOW=200000  # コンテキストウィンドウの最大サイズ
ANTHROPIC_MAX_INPUT_TOKENS=50000  # 入力テキストの最大トークン数（旧マジックナンバー）

# グラレコHTML出力設定
# 相対パスまたは絶対パスで指定可能
# 相対パスの場合はプロジェクトルートからの相対パス
GRARECO_OUTPUT_DIR=./output
